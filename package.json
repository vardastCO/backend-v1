{
  "name": "sazmate-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "proprietary",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "clean": "rm -rf dist",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "a": "node_modules/.bin/ts-node -r tsconfig-paths/register src/main.cli.ts",
    "migrate": "npx typeorm-ts-node-esm -d src/typeorm.config.ts migration:run",
    "typeorm-build-config": "tsc src/typeorm.config.ts --outDir ./dist",
    "typeorm-migration:generate": "pnpm typeorm-build-config && npx typeorm -d dist/typeorm.config.js migration:generate",
    "typeorm-migrate": "pnpm typeorm-build-config && npx typeorm -d dist/typeorm.config.js migration:run"
  },
